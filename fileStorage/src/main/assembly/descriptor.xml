<assembly>
	<id>app-${project.version}</id>
	<formats>
		<format>ear</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>io.netty:netty</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<componentDescriptors>
		<componentDescriptor>
			src/main/assembly/common.xml
		</componentDescriptor>
	</componentDescriptors>
</assembly>
